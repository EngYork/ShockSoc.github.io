---
export interface Props {
  name: string;
  description: string;
  when: string;
  where: string;
  image: string;
}

const { name, description, when, where, image } = Astro.props;
---

<div
  class="w-2/3 rounded self-center shadow-lg border-2 border-slate-900 bg-slate-300 dark:bg-slate-600 flex flex-col relative my-4"
>
  <div class="w-full bg-gradient-to-r from-uni-green to-uni-blue rounded-t">
    <p class="text-center p-4 text-slate-100">
      {when} @ {where}
    </p>
  </div>
  <h2 class="self-center text-2xl sm:text-3xl italic my-4">
    {name}
  </h2>
  <div class="p-4 text-lg text-justify">
    <p>{description}</p>
  </div>
</div>
