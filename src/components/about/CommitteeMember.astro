---
export interface Props {
  name: string;
  bio: string;
  image: string;
}

const { name, bio, image } = Astro.props;
---

<div class="group w-full p-10 outline-none">
  <div class="rounded bg-gradient-to-tr from-uni-green to-uni-blue w-full h-full">
    <div class="rounded relative w-full h-full">
      <img
        src={image}
        alt={`Picture of ${name}`}
        class="w-full h-full object-cover rounded p-2"
      />
      <div
        class="absolute bottom-0 left-0 w-[calc(100%-1rem)] p-4 mx-2 bg-gradient-to-tr from-uni-green/80 to-uni-blue/80 text-slate-100"
      >
        <p class="text-2xl xl:text-3xl italic">{name}</p>
        <p
          class="text-[0px] group-hover:text-base sm:group-hover:text-lg text-justify transition-[font] ease-in-out duration-150"
        >
          {bio}
        </p>
      </div>
    </div>
  </div>
</div>
