---
import { Icon } from "astro-icon";

export interface Props {
  cardColours: string;
  badgeColours: string;
  name: string;
  image: string;
  textColour?: string;
  hoverTextColour?: string;
  link: string;
  buttonMessage: string;
}

const {
  cardColours,
  badgeColours,
  name,
  image,
  textColour,
  hoverTextColour,
  link,
  buttonMessage,
} = Astro.props;
---

<div
  class={`flex flex-col p-2 rounded-lg border-2 ${cardColours} mx-auto sm:mx-8 my-4 items-center relative group shadow-md`}
>
  <div
    class={`w-30 h-30 m-4 rounded-full border-4 grid p-4 ${badgeColours} bg-slate-300 dark:bg-gray-800 group-hover:bg-slate-50 dark:group-hover:bg-gray-700 transition-colors ease-in-out duration-200`}
  >
    {
      image.includes("ic") ? (
        <Icon
          name={image}
          class={`w-32 h-32 object-scale-down ${textColour}`}
          aria-label="Email icon"
        />
      ) : (
        <img
          src={image}
          alt={`${name} logo`}
          class="w-32 h-32 object-scale-down"
        />
      )
    }
  </div>
  <p
    class={`${
      textColour ? textColour : "text-gray-900 dark:text-slate-100"
    } text-2xl sm:text-4xl`}
  >
    {name}
  </p>
  <a
    href={link}
    class={`p-4 mx-auto my-4 border-2 ${cardColours} rounded ${
      hoverTextColour
        ? `dark:text-slate-100 text-slate-900 ${hoverTextColour}`
        : "text-slate-900 dark:text-slate-200"
    } hover:bg-transparent transition-colors ease-in-out duration-200`}
  >
    <button aria-label={`${buttonMessage} button`}>{buttonMessage}</button>
  </a>
</div>
